<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>almira.rpm</groupId>
    <artifactId>master-rpm</artifactId>
    <version>12</version>
    <relativePath>../../master-rpm/pom.xml</relativePath>
  </parent>

  <artifactId>atlassian-jira</artifactId>
  <version>6.3.13.1</version>
  <packaging>rpm</packaging>
  <name>almira.rpm.atlassian-jira</name>

  <description>Project tracker for teams planning, building and launching
great products.</description>

  <url>http://www.atlassian.com/software/jira/overview</url>

  <properties>
    <appVersion>6.3.13</appVersion>
    <rpmRelease>1</rpmRelease>

    <appServiceName>jira</appServiceName>
    <appContextPath>jira</appContextPath>

    <jdbcDriverName>mysql-connector-java</jdbcDriverName>
    <jdbcDriverVersion>5.1.34</jdbcDriverVersion>

    <!-- overrides -->
    <appSrcLocation>target/unpack/${project.artifactId}-${appVersion}-standalone</appSrcLocation>
    <destPrefix>/home/${appUserName}</destPrefix>
    <appWorkFolder>${destPrefix}/jira-data</appWorkFolder>
  </properties>

  <build>
    <finalName>${project.artifactId}-${project.version}.el6.noarch</finalName>
    <defaultGoal>package</defaultGoal>
    <plugins>

      <!-- http://mojo.codehaus.org/rpm-maven-plugin/index.html -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <configuration>
          <prereqs>
            <prereq>apache-tomcat &gt;= 7.0.57</prereq>
          </prereqs>
          <vendor>Atlassian</vendor>
          <copyright>Commercial</copyright>
          <summary>Project tracker.</summary>
          <mappings>

            <!-- conf files -->
            <mapping>
              <directory>${destConf}</directory>
              <configuration>true</configuration>
              <sources>
                <source>
                  <location>${appSrcLocation}/conf</location>
                  <excludes>
                    <exclude>server.xml</exclude>
                  </excludes>
                </source>
                <source>
                  <location>target/classes/${appServiceName}</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/etc/sysconfig</directory>
              <username>root</username>
              <groupname>root</groupname>
              <filemode>644</filemode>
              <configuration>true</configuration>
              <sources>
                <source>
                  <location>target/classes/sysconfig/${appServiceName}</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/etc/logrotate.d</directory>
              <username>root</username>
              <groupname>root</groupname>
              <filemode>644</filemode>
              <configuration>true</configuration>
              <sources>
                <source>
                  <location>target/classes/logrotate.d/${appServiceName}</location>
                </source>
              </sources>
            </mapping>

            <!-- webapps (add containing folder explicitly to set owner correctly -->
            <mapping>
              <directory>${destBase}/webapps</directory>
            </mapping>
            <mapping>
              <directory>${destBase}/webapps/${appContextPath}</directory>
              <sources>
                <source>
                  <location>${appSrcLocation}/atlassian-jira</location>
                </source>
              </sources>
            </mapping>

            <!-- catalina-base -->
            <mapping>
              <directory>${destBase}/lib</directory>
              <sources>
                <source>
                  <location>${appSrcLocation}/lib</location>
                  <excludes>
                    <exclude>annotations-api.jar</exclude>
                    <exclude>catalina*.jar</exclude>
                    <exclude>ecj-*.jar</exclude>
                    <exclude>el-api.jar</exclude>
                    <exclude>jasper*.jar</exclude>
                    <exclude>jsp-api.jar</exclude>
                    <exclude>servlet-api.jar</exclude>
                    <exclude>tomcat*.jar</exclude>
                    <exclude>ojdbc*.jar</exclude>
                    <exclude>postgresql*.jar</exclude>
                  </excludes>
                </source>
                <source>
                  <location>target/unpack/${jdbcDriverName}-${jdbcDriverVersion}</location>
                  <includes>
                    <include>*.jar</include>
                  </includes>
                </source>
              </sources>
            </mapping>
          </mappings>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
